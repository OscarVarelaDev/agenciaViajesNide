extends ./layout/index

block contenido
   main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y sus expreciencias
        include ./layout/bloque_testimoniales
        .row
                .col-md-12
                    h2.d-block.w-100.text-center Agrega un Comentario
                    if(errores)
                         each error in errores
                           .alert.col.alert-danger.text-center= error.mensaje
                .row.justify-content-center.col
                   .col-md-8
                       form(action="/testimoniales" method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input#nombre(type=text, placeholder="Ingresa tu nombre", name="nombre", class="form-control" value=nombre)
                            .form-group
                                label(for="correo") Correo electronico
                                input#correo(type=text, placeholder="Ingresa tu correo", name="correo", class="form-control" value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(class="form-control", name="mensaje", placeholder="Ingresa tu mensaje", rows=3)=mensaje
                            input.btn.btn-success.btn-block(type="submit")